<?xml version="1.0" encoding="UTF-8"?>


<Context>
	<!-- name 값은 일반적으로 해당 DB툴의 이름을 사용 -->
	<!-- auth 값은 리소스를 얻어갈 떄 인증은 톰캣 컨테이너를 사용한다는 의미 -->
	<!-- 
	type 값은 공유할 리소스의 타입을 지정한다. 
	DataSource의 getConnection() 메소드를 사용하여 Connection 객체를 얻어갈 수 있다.
	-->
	<!-- maxTotal 값은 최대 커넥션 수를 뜻한다.-->
	<Resource 
		name="jdbc/MySQL"
		auth="Container"
		type="javax.sql.DataSource"
		driverClassName="com.mysql.cj.jdbc.Driver"
		url="jdbc:mysql://localhost:3306/study_jsp5"
		username="root"
		password="1234"
		maxTotal="100"
	/> <!-- 끝태그 생략시 /> 로 닫을 수 있다. -->
	
</Context>